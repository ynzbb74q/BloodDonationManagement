<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--献血種別見出し-->
    <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorMyAppWhite"
            android:background="@drawable/original_upper_text_box"/>
    <!--献血可能日表示エリア-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!--献血可能日-->
        <TextView
                android:id="@+id/textView_date"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="@color/colorMyAppBlack"
                android:background="@drawable/original_lower_text_box"/>
        <!--献血可能マーク-->
        <ImageView
                android:id="@+id/imageView_okIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_check_red_24dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>